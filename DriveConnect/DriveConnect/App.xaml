            <!--#endregion-->

            <!--#region Grid -->
            <Style x:Key="GridInCollectionView" TargetType="Grid">
                <Setter Property="Padding" Value="0,5"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>
            <Style x:Key="GridInCollectionViewNoPadding" TargetType="Grid">
